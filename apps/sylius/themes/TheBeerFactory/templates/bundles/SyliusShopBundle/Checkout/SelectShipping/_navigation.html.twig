{% set enabled = order.shipments|length %}

<div class="flex flex-main-between mt-lg sm:flex-column-reverse sm:mt-md">
    <div class="mr-sm sm:mt-sm sm:mr-n">
        <a
            class="btn btn--reversed sm:w-full"
            href="{{ path('sylius_shop_checkout_address') }}"
        >
            {{ 'sylius.ui.change_address'|trans }}
        </a>
    </div>
    <div class="ml-sm sm:ml-n">
        <button
            class="btn sm:w-full"
            id="next-step"
            type="submit"
            {% if not enabled %} disabled{% endif %}
            {{ sylius_test_html_attribute('next-step') }}
        >
            {{ 'sylius.ui.next'|trans }}
        </button>
    </div>
</div>
