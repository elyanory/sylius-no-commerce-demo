<div class="flex-item-fluid sm:flex-item-none sm:w-full sm:mb-xs">
    <form
        method="get"
        action="{{ path('sylius_shop_product_index', {'slug': app.request.attributes.get('slug')}) }}"
        class="ui loadable form"
    >
        <div class="flex flex-cross-start" id="searchbar">
            <div class="flex-item-fluid" id="searchbarTextField">
                {% for filter in products.definition.enabledFilters %}
                    {{ sylius_grid_render_filter(products, filter) }}
                {% endfor %}
            </div>
            <div class="flex-item-none ml-xs" id="searchbarButtons">
                <button
                    class="btn pr-sm pl-sm"
                    type="submit"
                    {{ sylius_test_html_attribute('search') }}
                >
                    {{ 'sylius.ui.search'|trans }}
                </button>
                <a
                    class="btn btn--link pr-sm pl-sm"
                    href="{{ path('sylius_shop_product_index', {'slug': app.request.attributes.get('slug')}) }}"
                    {{ sylius_test_html_attribute('clear') }}
                >
                    {{ 'sylius.ui.clear'|trans }}
                </a>
            </div>
        </div>
    </form>
</div>
