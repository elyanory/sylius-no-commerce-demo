{% import '@SyliusShop/Macro/buttons.html.twig' as buttons %}

<div class="mt-lg" id="order-invoices">
    <h3 class="h3 mt-n" id="shipping-state">{{ 'sylius_invoicing_plugin.ui.invoices'|trans }}</h3>
    <table class="table table--responsive">
        <thead>
        <tr>
            <th>{{ 'sylius.ui.number'|trans }}</th>
            <th>{{ 'sylius_invoicing_plugin.ui.issued_at'|trans }}</th>
            <th>{{ 'sylius.ui.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for invoice in invoices %}
            <tr>
                <td class="w-full sm:w-auto" data-title="{{ 'sylius.ui.number'|trans }}">
                    {{ invoice.number }}
                </td>
                <td class="text-no-wrap" data-title="{{ 'sylius_invoicing_plugin.ui.issued_at'|trans }}">
                    {{ invoice.issuedAt|date('d-m-Y') }}
                </td>
                <td>
                    {% set path = path('sylius_invoicing_plugin_shop_invoice_download', { 'id': invoice.id }) %}

                    {{ buttons.default(path, 'sylius_invoicing_plugin.ui.download_invoice'|trans, invoice.id, 'sm:w-full') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
